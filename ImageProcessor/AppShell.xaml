<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ImageProcessor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ImageProcessor.Views"
    Title="ImageProcessor">

    <!-- Tab Bar for different operation types -->
    <TabBar>
        <!-- Arithmetic Operations Tab -->
        <ShellContent Title="Arithmetic" 
                      Icon="calculator.png" 
                      ContentTemplate="{DataTemplate views:ImageTabsView}" 
                      Route="Arithmetic" />
        
        <!-- Convolution Operations Tab -->
        <ShellContent Title="Convolution" 
                      Icon="filter.png" 
                      ContentTemplate="{DataTemplate views:ConvolutionView}" 
                      Route="Convolution" />
    </TabBar>

</Shell>
